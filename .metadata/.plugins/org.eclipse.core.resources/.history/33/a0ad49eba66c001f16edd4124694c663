server:
  port: 8080  # Puerto en el que se ejecutará la aplicación

spring:
  datasource:
    url: jdbc:mysql://localhost:3306/organization_db  # URL de la base de datos MySQL
    username: your_username  # Reemplaza con tu usuario de base de datos
    password: your_password  # Reemplaza con tu contraseña de base de datos
    driver-class-name: com.mysql.cj.jdbc.Driver

  jpa:
    hibernate:
      ddl-auto: update  # Opción para actualizar el esquema de la base de datos automáticamente (opciones: none, update, create, create-drop)
    show-sql: true  # Muestra las consultas SQL generadas por JPA en la consola
    properties:
      hibernate:
        format_sql: true  # Formatea el SQL para que sea más legible

  jackson:
    serialization:
      indent-output: true  # Formato legible para los objetos JSON en las respuestas

logging:
  level:
    root: INFO  # Nivel de log predeterminado
    org.springframework: INFO  # Nivel de log para Spring
    com.yourcompany.organization: DEBUG  # Nivel de log para tu paquete específico

