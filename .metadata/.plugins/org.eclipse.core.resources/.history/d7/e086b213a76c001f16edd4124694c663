server:
  port: 8080  # Puerto en el que se ejecutará la aplicación

spring:
  datasource:
    url: jdbc:mysql://localhost:3306/organization_db  # URL de la base de datos MySQL
    username: root  
    password: root  
    driver-class-name: com.mysql.cj.jdbc.Driver

  jpa:
		database-platform: org.hibernate.dialect.MySQLDialect
    hibernate:
      ddl-auto: update  
    show-sql: true  



